@{
    ViewBag.Title = "Database";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    <script src="~/Scripts/Global.js"></script>
    <div ng-app="myApp" ng-controller="customersCtrl">
        <form name="databaseForm">
            <table class="table table-bordered table-striped ajk-table">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="checkall" /></th>
                        <th>Course</th>
                        <th>Section</th>
                        <th>Max</th>
                        <th>CRN</th>
                        <th>Instructor</th>
                        <th>Days</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Room</th>
                        <th>number</th>
                        <th>&nbsp;</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tr>
                    <td>&nbsp;</td>
                    <td><input class="form-control has-error" ng-minlength="1" ng-model="contact.Course" required></td>
                    <td><input class="form-control has-error" ng-minlength="1" ng-model="contact.Section" required></td>
                    <td><input class="form-control has-error" ng-minlength="1" ng-model="contact.Max" required></td>
                    <td><input class="form-control has-error" ng-minlength="1" ng-model="contact.CRN" required></td>
                    <td><input class="form-control has-error" ng-minlength="1" ng-model="contact.Instructor" required></td>
                    <td><input class="form-control has-error" ng-minlength="1" ng-model="contact.Days" required></td>
                    <td><input class="form-control has-error" ng-minlength="1" ng-model="contact.startTime" required></td>
                    <td><input class="form-control has-error" ng-minlength="1" ng-model="contact.endTime" required></td>
                    <td><input class="form-control has-error" ng-minlength="1" ng-model="contact.Room" required></td>
                    <td><input class="form-control has-error" ng-minlength="1" ng-model="contact.Notes" required></td>
                    <td><button class="btn btn-primary" ng-disabled="databaseForm.$invalid" ng-click="addContact()">Add Contact</button></td>
                    <td>
                        <button class="btn btn-primary" ng-disabled="databaseForm.$invalid" ng-click="update()">Update</button>
                        &nbsp;&nbsp;
                        <button class="btn btn-warning" ng-click="deselect()">Clear</button>
                    </td>
                </tr>
                <tr ng-repeat="contact in names">
                    <td><input type="checkbox" class="checkthis" /></td>
                    <td>{{contact.Course}}</td>
                    <td>{{contact.Section}}</td>
                    <td>{{contact.Max}}</td>
                    <td>{{contact.CRN}}</td>
                    <td>{{contact.Instructor}}</td>
                    <td>{{contact.Days}}</td>
                    <td>{{contact.starTime}}</td>
                    <td>{{contact.endTime}}</td>
                    <td>{{contact.Room}}</td>
                    <td>{{contact.Notes}}</td>
                    <td><p data-placement="top" data-toggle="tooltip" title="Drop"><button class="btn btn-danger btn-xs" data-title="Drop" data-toggle="modal" data-target="#drop" ng-click="dropItem(contact.Course)"><span class="glyphicon glyphicon-trash"></span></button></p></td>
                    <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" ng-click="editItem(contact.Course)"><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                </tr>
                <tr>
                    <th>New Database</th>
                    <th>
                        <p data-placement="top" data-toggle="tooltip" title="Add New Database"><button class="btn btn-primary btn-xs" data-title="add_database" data-toggle="modal" data-target="#view" ng-click="sendMessage()"><span class="glyphicon glyphicon-plus"></span></button></p>
                        <p data-placement="top" data-toggle="tooltip" title="Update Database"><button class="btn btn-primary btn-xs" data-title="update_database" data-toggle="modal" data-target="#view" ng-click="updateDB()"><span class="glyphicon glyphicon-open"></span></button></p>
                        <p data-placement="top" data-toggle="tooltip" title="Upload file to Database"><button class="btn btn-primary btn-xs" data-title="add_file_database" data-toggle="modal" data-target="#view" ng-click="fileAddDB()"><span class="glyphicon glyphicon-file"></span></button></p>
                    </th>
                    <th colspan="2"><input class="form-control has-error" ng-model="DB_INPUT"></th>
                </tr>
            </table>
        </form>
    </div>
</body>


