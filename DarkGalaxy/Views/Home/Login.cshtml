
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center-block login-style">
    <img src="http://placehold.it/350x150">
    <form name="form" id="form" class="form-horizontal" enctype="multipart/form-data" method="POST" action="check_login.php">
        <!-- user -->
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user fa-fw"></i> </i></span>
            <input id="user" class="form-control" name="user" type="text" value="" placeholder="User">
        </div>
        <!-- Password -->
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock fa-fw"></i> </i></span>
            <input id="password" class="form-control" name="password" type="password" placeholder="Password">
        </div>
        <div class="form-group">
            <!-- Button -->
            <div class="col-sm-12 controls">
                <button id="submit" name="submit" type="submit" value="Login" href="#" class="btn btn-primary pull-right"><i class="fa fa-sign-in fa-fw"></i> Log in</button>
            </div>
        </div>
    </form>
</div>

